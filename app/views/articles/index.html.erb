<% content_for :title, "Articles" %>

<div class="container">
  <div class="row">
    <% @articles.each do |a| %>
      <div class="col-12 mb-4">
        <h4 class="display-6"><%= a.title %></h4>
        <p class="text-muted text-truncate"><%= truncate(a.text, length: 140, separator: ' ') %></p>
        <div class="d-flex gap-2">
          <%= link_to "Show", article_path(a), class: "btn btn-outline-secondary btn-sm" %>
          <%= link_to "Edit", edit_article_path(a), class: "btn btn-outline-secondary btn-sm" %>
          <%= button_to "Delete", article_path(a), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-secondary btn-sm" %>
        </div>
        <hr>
      </div>
    <% end %>
  </div>
</div>
