<h1><%=t('contacts.contact_us')%></h1>

<%if @contact && @contact.errors.any?	%>
<p><ul><%@contact.errors.full_messages.each do |m|%>
	<li><%=m%></li>	

<%end%>
</ul>
<%end%>
</p>

	
<%= form_with model: @contact, local: true, data: {turbo: false} do |f| %>
	
 <p>
    <%= f.label :email, class: "form-label " %>
    <%= f.text_field :email, class: "form-control w-50" %>
  </p>
  <p>
    <%= f.label :message, class: "form-label" %>
    <%= f.text_area :text, class: "form-control w-50" %>
  </p>

  <p><%= f.submit "Send", class:"btn btn-dark btn-lg" %></p>



<% end %>